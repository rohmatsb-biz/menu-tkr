#!/bin/bash
spinner()
{
    local pid=$!
    local delay=0.1
    local spinstr='|/-\|'
    while [ "$(ps a | awk '{print $1}' | grep $pid)" ]; do
        local temp=${spinstr#?}
        printf " [%c]  " "$spinstr"
        local spinstr=$temp${spinstr%"$temp"}
        sleep $delay
        printf "\b\b\b\b\b\b"
    done
    printf "    \b\b\b\b"
}

echo "ğ™‹ğ™§ğ™¤ğ™¨ğ™šğ™¨ ğ™ğ™šğ™™ğ™–ğ™£ğ™œ ğ˜½ğ™šğ™§ğ™Ÿğ™–ğ™¡ğ™–ğ™£..."
sleep 2.5 & spinner
echo "ğ™‹ğ™§ğ™¤ğ™¨ğ™šğ™¨ ğ™ğ™šğ™¡ğ™šğ™¨ğ™–ğ™....."
